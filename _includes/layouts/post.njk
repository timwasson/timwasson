---
layout: layouts/archive.njk
templateClass: tmpl-post
---
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="text-light font-pixel">{{ title }}</h1>
    {% if date %}
    <time class="card-subtitle mb-2 text-light font-pixel" datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</tim>
    {% endif %}
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 text-light font-pixel">
      {{ content | safe }}
    </div>
  </div>
</div>

<p><a href="{{ '/' | url }}">← Home</a></p>
